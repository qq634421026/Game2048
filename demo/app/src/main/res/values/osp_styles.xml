<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- 百度钱包 -->
    <style name="EbpayActivityAnim">
        <item name="@android:activityOpenEnterAnimation">@anim/wallet_base_slide_from_right</item>
        <item name="@android:activityOpenExitAnimation">@anim/wallet_base_slide_to_left</item>
        <item name="@android:activityCloseEnterAnimation">@anim/wallet_base_slide_from_left</item>
        <item name="@android:activityCloseExitAnimation">@anim/wallet_base_slide_to_right</item>
    </style>

    <style name="EbpayActivityAnim2">
        <item name="@android:activityOpenEnterAnimation">@anim/wallet_base_show_dialog_anim</item>
        <item name="@android:activityOpenExitAnimation">@anim/wallet_base_dismiss_dialog_anim</item>
        <item name="@android:activityCloseEnterAnimation">@anim/wallet_base_show_dialog_anim</item>
        <item name="@android:activityCloseExitAnimation">@anim/wallet_base_dismiss_dialog_anim
        </item>
    </style>

    <style name="EbpayThemeActivityBase" parent="@android:style/Theme.NoTitleBar">
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:textColor">@color/ebpay_black</item>
        <item name="android:windowAnimationStyle">@style/EbpayActivityAnim</item>
        <item name="android:textSize">15sp</item>
        <item name="android:screenOrientation">portrait</item>
    </style>

    <style name="EbpayThemeActivitTranslucent" parent="EbpayThemeActivityWelcome">
        <item name="android:windowAnimationStyle">@style/EbpayActivityAnim2</item>
    </style>

    <style name="EbpayThemeActivityWelcome" parent="@android:style/Theme.Translucent.NoTitleBar">
        <item name="android:textColor">@color/ebpay_black</item>
        <item name="android:textSize">15sp</item>
        <item name="android:screenOrientation">portrait</item>
    </style>

    <style name="wallet_title">
        <item name="android:background">#f8f8f8</item>
    </style>

    <style name="wallet_titlebar_left_imgzone2">
        <item name="android:background">@drawable/wallet_base_title_back_selector</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingRight">7.5dp</item>
    </style>

    <style name="wallet_titlebar_left_imgzone2_img">
        <item name="android:gravity">center</item>
        <item name="android:scaleType">center</item>
        <item name="android:src">@drawable/wallet_base_action_bar_back</item>
    </style>

    <style name="wallet_titlebar_left_imgzone2_notify">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#333333</item>
        <item name="android:text"></item>
        <item name="android:gravity">center</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="wallet_titlebar_center_text">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#333333</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center</item>
        <item name="android:maxEms">8</item>
    </style>

    <style name="title_center_safe_icon">
        <item name="android:src">@drawable/wallet_base_ation_bar_icon_safe</item>
    </style>

    <style name="wallet_titlebar_center_safe_tip">
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">#999999</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="wallet_titlebar_right_imgzone2_notify">
        <item name="android:textSize">14sp</item>
        <item name="android:clickable">false</item>
        <item name="android:textColor">#333333</item>
        <item name="android:singleLine">true</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingLeft">10dp</item>
    </style>

    <style name="wallet_titlebar_bottom_seperator">
        <item name="android:background">@color/ebpay_action_bar_line_ccccccc</item>
        <item name="android:scaleType">fitXY</item>
    </style>

    <style name="bd_wallet_custom_dialog_theme" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="EbpayPromptDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:textColor">@color/ebpay_black</item>
        <item name="android:windowBackground">@color/ebpay_transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:background">@color/ebpay_transparent</item>
    </style>

    <style name="EditCommonStyle">
        <item name="android:singleLine">true</item>
        <item name="android:textSize">@dimen/ebpay_text_size_15</item>
        <item name="android:background">@null</item>
        <item name="android:textColorHint">@color/wallet_base_6c</item>
    </style>

    <style name="EbpayThemeActivit" parent="@android:style/Theme.NoTitleBar">
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:textColor">#ff000000</item>
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:textSize">15sp</item>
        <item name="android:screenOrientation">portrait</item>
    </style>

    <style name="bd_wallet_plugin_update_progressbar" parent="@android:style/Widget.ProgressBar.Horizontal">
        <item name="android:maxHeight">50dip</item>
        <item name="android:minHeight">8dip</item>
        <item name="android:indeterminateOnly">false</item>
        <item name="android:indeterminateDrawable">
            @android:drawable/progress_indeterminate_horizontal
        </item>
        <item name="android:progressDrawable">@drawable/wallet_base_progressbar</item>
    </style>

    <style name="bd_wallet_safekeyboard_popwindown_anim" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/wallet_base_safekeyboard_slide_from_down
        </item>
        <item name="android:windowExitAnimation">@anim/wallet_base_safekeyboard_slide_to_down</item>
    </style>

</resources>